<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.demo.instantpush.RequestActivity"
    android:background="@android:color/white">

   <Button
       android:id="@+id/regButton"
       android:layout_width="150dp"
       android:layout_height="wrap_content"
       android:text="Register"
       android:padding="10dp"
       android:layout_centerHorizontal="true"
       android:layout_marginTop="20dp"
       android:background="@android:color/holo_green_light"
       android:gravity="center"/>

    <Button
        android:id="@+id/deregButton"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Deregister"
        android:padding="10dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/regButton"
        android:background="@android:color/holo_green_light"
        android:gravity="center"/>

    <Button
        android:id="@+id/postFav"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Post Favorite"
        android:padding="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/deregButton"
        android:layout_marginTop="20dp"
        android:background="@android:color/holo_green_light"
        android:gravity="center"/>

</RelativeLayout>
